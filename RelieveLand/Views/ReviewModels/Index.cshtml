@model IEnumerable<RelieveLand.Models.ReviewModels>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron jumbotron-reviews">

    <h1 class="reviews">All Reviews</h1>

    <p class="lead text-over motto">Where to go, when you need to go.</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 outside-border review-index-outside">
            <div class="inside-border thumbnail review-index">
                <div class="caption">
                    <h4><span class="label label-primary">@Html.DisplayNameFor(model => model.EstablishmentModels.EstName):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.EstablishmentModels.EstName)</h4>
                    <h5><span class="label label-primary">@Html.DisplayNameFor(model => model.UserName):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.UserName)</h5>
                    <p>@Html.DisplayFor(modelItem => item.ReviewTime)</p>
                    <p><span class="label label-primary">@Html.DisplayNameFor(model => model.OverallRating):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.OverallRating)</p>
                    <p><span class="label label-primary">@Html.DisplayNameFor(model => model.OdorRating):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.OdorRating)</p>
                    <p><span class="label label-primary">@Html.DisplayNameFor(model => model.AppearRating):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.AppearRating)</p>

                    @if (item.UserComments != null)
                    {
                        <p><span class="label label-primary">@Html.DisplayNameFor(model => model.UserComments):</span>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.UserComments)</p>
                    }
                    @Html.ActionLink("Go To This Establishment", "Details", "EstablishmentModels", new { id = item.EstID }, new { @class = "btn btn-default", role = "button" })
                </div>
            </div>
        </div>
    }
</div>

